generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Users {
  id       String     @id
  name     String
  email    String     @unique
  password String
  insights Insights[]
}

model Insights {
  id      String    @id
  title   String
  content String
  userId  String
  user    Users     @relation(fields: [userId], references: [id])
  tags    Tag[]     @relation("InsightTags")
}

model Tag {
  id        String     @id
  name      String     @unique
  insights  Insights[] @relation("InsightTags")
}